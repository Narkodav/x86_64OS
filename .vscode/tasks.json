{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make clear",
            "type": "shell",
            "command": "wsl",
            "args": [
                "make",
                "clear"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "make run",
            "type": "shell",
            "command": "wsl",
            "args": [
                "make",
                "run"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "make clear"
        },
        {
            "label": "make debug",
            "type": "shell",
            "command": "wsl",
            "args": [
                "make",
                "debug"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "make clear"
        },
        {
            "label": "build and run kernel",
            "dependsOrder": "sequence",
            "dependsOn": [
                "make clear",
                "make run"
            ]
        },
        {
            "label": "build and debug kernel",
            "dependsOrder": "sequence",
            "dependsOn": [
                "make clear",
                "make debug"
            ]
        }
    ]
}